# ============================================
# DEGENERATE DICE - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# --------------------------------------------
# REQUIRED FOR PRODUCTION
# --------------------------------------------

# Escrow wallet public key (receives bets from users)
NEXT_PUBLIC_ESCROW_WALLET=your_escrow_wallet_public_key

# Escrow wallet private key for automated payouts
# Format: Base58 encoded (from Phantom: Settings > Export Private Key)
# SECURITY: Never commit this to git!
ESCROW_WALLET_PRIVATE_KEY=

# Solana RPC URL (mainnet)
# Options:
# - Helius (recommended): https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# - QuickNode: https://your-endpoint.solana-mainnet.quiknode.pro/YOUR_KEY/
# - Alchemy: https://solana-mainnet.g.alchemy.com/v2/YOUR_KEY
NEXT_PUBLIC_SOLANA_RPC_URL=

# Admin panel password (use a strong password!)
ADMIN_PASSWORD=

# Vercel KV (Redis) - REQUIRED for persistent storage
# Get from Vercel Dashboard > Storage > KV
KV_REST_API_URL=
KV_REST_API_TOKEN=

# --------------------------------------------
# OPTIONAL
# --------------------------------------------

# Set to "true" to enable verbose logging
# DEBUG=true
